includes:
    - vendor/larastan/larastan/extension.neon

parameters:
    paths:
        - app/

    # Level 4 para evitar muitos falsos positivos do Eloquent
    level: 4

    # Tratar tipos do PHPDoc como incertos (evita falsos positivos com Enums)
    treatPhpDocTypesAsCertain: false

    # Não reportar padrões de ignore não usados
    reportUnmatchedIgnoredErrors: false

    # Ignorar erros específicos do Laravel/Eloquent
    ignoreErrors:
        # Relacionamentos e propriedades mágicas
        - '#Access to an undefined property#'
        - '#Relation .* is not found in .* model#'

        # Parâmetros de tipo
        - '#Parameter .* expects .*, .* given#'

        # Nullsafe
        - '#Using nullsafe#'

        # Excel facade
        - '#Maatwebsite\\Excel#'

        # Anonymous functions
        - '#Anonymous function has an unused use#'

        # Comparações com Enums
        - '#Strict comparison using === between#'

        # Null coalesce
        - '#on left side of \?\? always exists#'
        - '#Expression on left side of \?\? is not nullable#'

        # Primary key
        - '#does not accept default value#'

    # Excluir arquivos
    excludePaths:
        - app/Console/Commands/
        - app/Http/Resources/

